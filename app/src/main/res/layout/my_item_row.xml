<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/my_item_name"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="5dp"
            android:clickable="true"
            android:focusable="true"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/my_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/my_item_name"
            android:textSize="16sp"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/button_remove_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_remove_shopping_cart_24"
            android:padding="10dp"
            android:text="Remove"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:background="@drawable/custom_button"
            android:layout_alignBottom="@+id/my_item_name"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ic_baseline_remove_shopping_cart_24" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>